block title
    | Cards

block main
    .logo-wrapper
        include ../../blocks/logo/logo-grey

block cards-section
    .container
        .cards__wrapper
            .cards__column
                +findApartmentsCard()

                +registerAccountCard()

            .cards__column
                +bookingCard()

                +enterCard()

            .cards__column
                .cards__item
                    +datepickerLeft('text-field-datepicker--left', '', '', '', '', '')

                .cards__item
                    .gallery__items
                        +gallery('gallery-1.png', 'true', '№', '888', 'люкс', '9 990₽', ' в сутки', 'star', '', 'cards__rate form-elements__rate--right', '145', 'Отзывов')
                        +gallery('gallery-2.png', 'false', '№', '840', '', '9 990₽', ' в сутки', 'star', '', '', '65', 'Отзывов')
